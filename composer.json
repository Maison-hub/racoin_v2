{
    "require": {
        "php": ">=8.2",
        "slim/slim": "3.*",
        "twig/twig": "3.*",
        "illuminate/database": "11.*",
        "ext-mysqli": "*",
        "ext-pdo": "*"
    },
    "autoload": {
        "psr-4": {
            "Database\\": "src/Database/",
            "Controller\\": "src/Controller/",
            "Model\\": "src/Model/"
        }
    },
    "config": {
        "allow-plugins": {
            "kylekatarnls/update-helper": true
        }
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    }
}
